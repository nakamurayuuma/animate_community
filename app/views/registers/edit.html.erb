<div class="row">
  <div class="row-box">
    <div class="title">
      アニメ登録の編集
    </div>
  </div>
  <%= form_for(@register) do |f| %>
    <%= render 'shared/error_messages',object: f.object %>

  <div class="form-label">
    <div class="form-label-box">
      <div class="form-label-text">
        <%= f.label :title, "アニメタイトル" %>
      </div>
      <div class="form-label-field">
        <%= f.text_field :title, placeholder: "例）鬼滅の刃",class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-label">
    <div class="form-label-box">
      <div class="form-label-text">
        <%= f.label :image,"アニメ画像" %>  
      </div>
      <div class="form-label-image">
        <%= f.file_field :image%>
      </div>
    </div>
  </div>

  <div class="form-label">
    <div class="form-label-box">
      <div class="form-label-text">
        <%= f.label :period,"アニメシーズン" %>
      </div>
      <div class="form-label-field">
        <%= f.text_field :period, placeholder: "例）1期や2期など",class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-label">
    <div class="form-label-box">
      <div class="form-label-text">
        <%= f.label :category_id,"ジャンル" %>
      </div>
      <div class="form-label-field">
        <%= f.collection_select :category_id, @category, :id, :name,prompt: "-"  %>
      </div>
    </div>
  </div>

  <div class="form-label">
    <div class="form-label-box">
      <div class="form-label-text">
        <%= f.label :management_id,"アニメの状態" %>
      </div>
      <div class="form-label-field">
        <%= f.collection_select :management_id, @management, :id, :view ,prompt: "-" %>
      </div>
    </div>
  </div>
    
  <div class="form-label">
    <div class="form-label-box">
      <div class="form-label-text">
        <%= f.label :content,"テキスト" %>
      </div>
      <div class="form-label-field-me">
        <%= f.text_area :content, size: "20x10",placeholder: "アニメの感想や思いなど自由にお書きください。",  class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-submit">
    <%= f.submit "アニメの登録を更新する",class: "submit-edit" %>
  </div>
  <% end %>
</div>

<script type="text/javascript">
$('#tweet_image').bind('change', function() {
  var size_in_megabytes = this.files[0].size/1024/1024;
  if (size_in_megabytes > 5) {
    alert('画像容量は5MBまでです. 画像ファイルを選択し直してください');
  }
});
</script>