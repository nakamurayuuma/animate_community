<%= form_for(@tweet) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "ここに文字を入力してください",class:"field-box" %>
    <%= f.submit "投稿する", class: "submit-btn-tweet" %>
    <div class="image">
      <%= f.file_field :image %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('#tweet_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('画像容量は5MBまでです. 画像ファイルを選択し直してください');
    }
  });
</script>