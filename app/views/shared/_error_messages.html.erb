<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert">
      <%= pluralize(object.errors.count, "件のエラーが発生しました。") %>
    </div>
    <ul class="error-message">
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>